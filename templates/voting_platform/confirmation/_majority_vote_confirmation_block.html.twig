{% import 'voting_platform/_macros.html.twig' as helper %}

{% for pool in pools %}
    <h1>{{ get_election_pool_title_key(pool)|trans }}</h1>

    <a href="{{ path('app_voting_platform_vote_step', {uuid: election.uuid, s: loop.index}) }}" class="text--body text--center link--no-decor link--blue--dark">
        Modifier mon choix
    </a>

    <div class="ballot-paper-container">
        {% for candidate_group_uuid,mention in vote_command.getChoiceForPool(pool) %}
            <div class="ballot-paper">
                <div class="ballot-paper__content text--center">
                    <div class="b__nudge--bottom-small">
                        <div class="text--uppercase text--gray b__nudge--bottom">

                        </div>
                        {% set candidate_group = candidate_groups|filter(group => candidate_group_uuid == group.uuid.toString)|first %}
                        {% set candidates = candidate_group.candidates|sort((a, b) => b.isFemale <=> a.isFemale) %}

                        {% for candidate in candidates %}
                            <div class="b__nudge--bottom-small">
                                <h3 class="text--medium">{{ candidate.fullName }}<span class="candidate-gender l__col l__col--center">{{ candidate.isFemale ? 'F' : 'H' }}</span></h3>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="l__row">
                        <div class="l__col--half l__row">
                            {% for candidate in candidate_group.candidates %}
                                <div class="candidate-photo avatar-initials avatar--small avatar--style-01">
                                    {{ helper.display_candidate_photo(candidate) }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="text--bold">{{ ('voting_platform.vote.majority_vote_mention.' ~ mention)|trans }}</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endfor %}
